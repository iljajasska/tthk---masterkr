<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="masterkr.view.bmw"
             Title="BMW"
             BackgroundColor="LightBlue">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" Margin="10">
            <Image x:Name="kartinka"></Image>
            <Label x:Name="header" Text="Модели BMW:" FontSize="Medium" />
            <Picker x:Name="picker" SelectedIndexChanged="picker_SelectedIndexChanged">
                <Picker.Items>
                    <x:String>BMW M3 E46</x:String>
                    <x:String>BMW M5 E39 </x:String>
                    <x:String>BMW 740i E65</x:String>
                    <x:String>BMW X5 E70</x:String>
                </Picker.Items>
            </Picker>
            <Image Source="bmw.png" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>